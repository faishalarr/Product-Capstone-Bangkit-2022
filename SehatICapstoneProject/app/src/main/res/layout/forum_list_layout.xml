<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:layout_margin="8dp"
    android:background="@color/white"
    android:elevation="5dp"
    app:cardCornerRadius="10dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/forumimg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/sehati_logo"
         />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/forumtitle"
        android:text="Pentingnya Pola Hidup Sehat"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/forumimg"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"/>

        <TextView
            android:id="@+id/forumdesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Testing"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@id/forumtitle"
            app:layout_constraintStart_toEndOf="@+id/forumimg"
            app:layout_constraintTop_toTopOf="parent"
           />
    <Button
        android:id="@+id/forumlikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        android:text="123"
        android:textColor="@color/black"
        android:backgroundTint="@color/gray"
        android:drawableEnd="@drawable/ic_baseline_thumb_up_24"
        app:layout_constraintStart_toEndOf="@id/forumimg"
        app:layout_constraintTop_toBottomOf="@id/forumdesc"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>